#include <stdio.h>
#include <math.h>
main(){
	int i, n;
	float m, v, s1=0, s2=0; 
	float li[10]; // 실수가 들어갈 수 있는 크기 10 짜리의 배열 'li' 생성 
	
	printf("변량의 개수 : "); // 변량의 개수(입력할 값의 개수)를 물음 
	scanf("%d",&n); //변량의 개수를 입력받아 'n'이라는 변수에 저장 
	
	for (i=0;i<n;i++){
		printf("%d번째 변량 : ",i+1);
		scanf("%f",&li[i]); 
		s1+=li[i];
	} // 0번째, 1번째, 2번째, ... , n번째 변량을 입력받아 배열 li에 순서대로 저장, 변수 s1에 각 변량을 모두 더함 
	
	m=s1/n; //변수 m을 s1 나누기 n으로 정함(m은 모든 변량을 더해 n으로 나눴으므로 평균임) 
	printf("평균 : %f\n",m); // 평균 m 출력 
	
	for (i=0;i<n;i++){
		s2+=(li[i]-m)*(li[i]-m); // 변수 s2에 (각 변량의 값 - 평균 m)의 제곱값을 더함 
	}
	v=s2/n; //변수 v를 s2 나누기 n으로 정함(v는 분산) 
	printf("분산 : %f\n",v);
	printf("표준편차 : %f\n",sqrt(v)); //sqrt(v)는 v의 제곱근이라는 뜻. 따라서 표준편차가 됨 
}
